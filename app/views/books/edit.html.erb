<h1>Editing Book</h1>

<%= form_with model: @book, url: update_book_path(@book.id) do |f| %>

  <div><h4>Tittle</h4></div>
  <%= f.text_field :title %>
  
  <div><h4>Body</h4></div>
  <%= f.text_area :body %>
  
  <div><%= f.submit 'Update Book' %></div>
  
<% end %>

<%= link_to "Show",book_path(@book.id) %>
|
<a class="back" href="/books">Back</a>
