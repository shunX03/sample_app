<%= form_with model: Book.new do |f| %>
<body>
<h1>Books</h1>

<table>
 <thead>
 <tr>

<th>Tittle</th>
<th>Body</th>
<th colspan="3"></th>

</tr>
</thead>

<% @books.each do |book| %>
<tbody>
 <tr>
 <td> <%= book.title %></td>
 <td><%= book.body %></td>
 <td><%= link_to "Show",book_path(book.id) %></td>
 <td><%= link_to "Edit", edit_book_path(book.id) %></td>
 <td><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure" %></td>
 </tr>
</tbody>
</table>
</body> 
 
 
 
  
<% end %>

<h2>New Book</h2>

  <h4>title</h4>
  <%= f.text_field :title %>
	
  <h4>body</h4>
  <%= f.text_area :body %>
	
  <div><%= f.submit 'Create Book' %></dive
<% end %>

