<h1>New Book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors have occurred
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <h4>Tittle</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <div><%= f.submit 'Create Book' %></dive>
  <% end %>
